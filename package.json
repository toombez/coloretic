{
  "name": "coloretic",
  "version": "0.0.0",
  "description": "A library for creating and manipulating various color spaces",
  "license": "MIT",
  "keywords": [
    "color",
    "color-space",
    "color-manipulation"
  ],
  "type": "module",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "dev:tsx": "tsx ./src/index.ts"
  },
  "devDependencies": {
    "tsup": "^8.2.2",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4"
  },
  "homepage": "https://github.com/toombez/coloretic",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/toombez/coloretic.git"
  },
  "bugs": {
    "url": "https://github.com/toombez/coloretic/issues"
  },
  "author": {
    "name": "Timur Tokaev",
    "url": "https://github.com/toombez"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ]
}
